<h1>Items (<%= "#{@items.count} #{@items.count == 1 ? 'Item' : 'Items'}" %>)</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th colspan=3>Description</th>
    <th>Created On</th>
    <th>Updated On</th>
  </tr>

  <% if @items.empty? %>
    <tr>
      <td>No Items</td>
    </tr>
  <% else %>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= link_to "#{item.id}", item_path(item) %>
        </td>
        <td><%= item.name %></td>
        <td colspan=3><%= item.description %></td>
        <td><%= item.created_at %></td>
        <td><%= item.updated_at %></td>
      </tr>
    <% end %>
  <% end %>

</table>

<h2>Actions</h2>

<%= button_tag(type: 'button') do %>
  <%= link_to 'New Item', new_item_path, class: 'link' %>
<% end %>
