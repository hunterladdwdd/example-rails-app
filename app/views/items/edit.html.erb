<h1>Item</h1>

<%= form_for @item, url: item_path(@item) do |f| %>
  <div class="form-group">
    <%= f.label "Name" %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label "Description" %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.submit "Update Item" %>
  </div>
<% end %>
