<h1>Item</h1>

<table>
  <tr>
    <th colspan=1>ID</th>
    <th colspan=3>Name</th>
    <th colspan=5>Description</th>
    <th colspan=3>Created</th>
    <th colspan=3>Updated</th>
  </tr>

  <tr>
    <td colspan=1><%= @item.id %></td>
    <td colspan=3><%= @item.name %></td>
    <td colspan=5><%= @item.description %></td>
    <td colspan=3><%= @item.created_at %></td>
    <td colspan=3><%= @item.updated_at %></td>
  </tr>

</table>

<h2>Actions</h2>

<%= button_tag(type: 'button') do %>
  <%= link_to 'New Item', new_item_path, class: 'link' %>
<% end %>

<%= button_tag(type: 'button') do %>
  <%= link_to 'Edit Item', edit_item_path(@item), class: 'link' %>
<% end %>

<%= button_tag(type: 'button') do %>
  <%= link_to 'Delete Item', item_path(@item), data: { turbo_method: :delete } %>
<% end %>

<%= button_tag(type: 'button') do %>
  <%= link_to 'All Items', items_path %>
<% end %>
